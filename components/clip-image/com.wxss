.clip-image{
  width: 100%;
  height: 100%;
  background: black;
}
.move-container{
  width: 100%;
  height: 100%;
}
.move-item{
  background: white;
  width: 500px;
  height: 200px;
}

.flash-border{
  width: 150px;
  height: 150px;
  border-radius: 50%;
  border:2px solid #fff;
}
.flash-border view {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  position: absolute;
  top: 0px;
  left: 0px;
}
.raw-image{
  opacity:0.7;
  filter:contrast(70%);
}
.choosen{
  background-repeat: no-repeat;
}